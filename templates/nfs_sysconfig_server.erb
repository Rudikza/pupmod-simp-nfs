<% if @nfsv3 -%>
RQUOTAD="<%= scope.lookupvar('::nfs::rquotad') %>"
<% else -%>
RQUOTAD=no
<% end -%>
RQUOTAD_PORT=<%= scope.lookupvar('::nfs::rquotad_port') %>
<% if @rpcrquotadopts && has_variable?('rpcrquotadopts') && !@rpcrquotadopts.empty? -%>
RPCRQUOTADOPTS="<%= @rpcrquotadopts %>"
<% end -%>
<% if @lockd_arg && has_variable?('lockd_arg') && !@lockd_arg.empty? -%>
LOCKD_ARG="<= lockd_arg %>"
<% end -%>
LOCKD_TCPPORT=<%= scope.lookupvar('::nfs::lockd_tcpport') %>
LOCKD_UDPPORT=<%= scope.lookupvar('::nfs::lockd_udpport') %>
<% if has_variable?('nfsd_module') && !@nfsd_module.empty? -%>
NFSD_MODULE="noload"
<% end %>
<% if has_variable?('rpcmountdopts') && !@rpcmountdopts.empty? -%>
RPCMOUNTDOPTS="<%= @rpcmountdopts %>"
<% end -%>
<% if has_variable?('statdarg') && !@statdarg.empty? -%>
STATDARG=""
<% end -%>
<% if has_variable?('statd_ha_callout') && !@statd_ha_callout.empty? -%>
STATD_HA_CALLOUT="<%= @statd_ha_callout %>"
<% end -%>
<% if has_variable?('rpcidmapdargs') && !@rpcidmapdargs.empty? -%>
RPCIDMAPDARGS="<%= @rpcidmapdargs %>"
<% end -%>
<% if has_variable?('rpcgssdargs') && !@rpcgssdargs.empty? -%>
RPCGSSDARGS="<%= @rpcgssdargs %>"
<% end -%>
<% if has_variable?('rpcsvcgssdargs') && !@rpcsvcgssdargs.empty? -%>
RPCSVCGSSDARGS="<%= @rpcsvcgssdargs %>"
<% end -%>
